<h1 class="books-h1">New book</h1>
<% if @book.errors.any? %>
  <div class="errors-winsow">
  <div class="errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="form-box">
    <p class="form">Title<br>
    <%= f.text_field :title %></p>
  </div>
  <div class="form-box">
  <p class="form">Body<br>
  <%= f.text_area :body %></p>
  </div>

  <div class="form-box">
  <p class="form"><%= f.submit 'Create Book' %></p>
  </div>
<% end %>
