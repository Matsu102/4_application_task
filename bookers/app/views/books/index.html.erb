<div class="flash">
  <%= flash[:notice] %>
</div>

<h1 class="books-h1">Books</h1>

<table>
  <thead>
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id), class: "black" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "black" %></td>
      <td><%= link_to "Destroy", book_path(book.id), class: "black", method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>
  <% end %>
</table>


<h1 class="books-h2">New book</h1>
<% if @book.errors.any? %>
  <div class="errors-winsow">
  <div class="errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="form-box">
    <lavel for="form-title">Title<br></lavel>
    <%= f.text_field :title %>
  </div>
  <div class="form-box">
  <lavel for="form">Body<br></lavel>
  <%= f.text_area :body %>
  </div>

  <div class="form-box">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>