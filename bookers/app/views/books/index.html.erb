<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<h4>Title</h4>
<h4>body</h4>
<% @books.each do |book| %>

  <p><%= book.title %></p>
  <p><%= book.body %></p>
  <span><%= link_to 'Show', book_path(book.id) %></span>
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>