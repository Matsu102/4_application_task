<h1 class="books-h1">Editing Book</h1>
<% if @book.errors.any? %>
  <div class="errors-winsow">
  <div class="errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>

  <div class="form-box">
    <lavel for="form-title">Title<br></lavel>
    <%= f.text_field :title %>
  </div>
  <div class="form-box">
  <lavel for="form">Body<br></lavel>
  <%= f.text_area :body %>
  </div>

  <div class="form-box">
  <%= f.submit 'Update Book' %>
  </div>

  <p class="button"><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>

<% end %>